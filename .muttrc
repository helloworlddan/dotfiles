set sig_dashes
set edit_headers
set fast_reply
set askcc
set fcc_attach
set forward_format  = "Fwd: %s"
set forward_decode
set attribution     = "On %d, %n wrote:"
set reply_to
set reverse_name
set include
set forward_quote

auto_view text/html

unset mark_old
unset confirmappend
unset mime_forward
unset move

