set my_name = "Daniel Stamer"
set realname="Daniel Stamer"
set from="daniel.stamer@icloud.com"
set folder = "~/Mail/icloud/"
set mbox_type  = Maildir
set spoolfile = "~/Mail/icloud/Inbox"
set mailcap_path 	= ~/.mutt/mailcap
set record = "+Sent Messages"
set sendmail="/usr/bin/msmtp -a default"
set use_from=yes
set editor = vim
set envelope_from=yes
set wait_key   = no
set timeout    = 3
set mail_check = 0
set markers    = no
set delete
set quit
set beep_new
set pipe_decode
set thorough_search
set sidebar_visible = yes
set sidebar_width   = 29
set status_chars  = " *%A"
