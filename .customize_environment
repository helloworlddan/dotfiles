#!/bin/sh

# Linking theia plugins
dest="/google/devshell/editor/theia/plugins"
current="$(pwd)"
for src in .plugins/*; do
  plugin="$(basename $src)"
  from_file="${current}/.plugins/${plugin}"
  to_file="${dest}/${plugin}"
  if [ ! -L $to_file ]; then
    ln -s "${from_file}" "${to_file}"
  fi
done

