#!/bin/sh

bspc monitor -d web mail cal slack term code demo misc collider comp

setxkbmap de
xsetroot -solid "#6C6F93"
sxhkd &

eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
export SSH_AUTH_SOCK

bspc config border_width         	2
bspc config normal_border_color   "#848484"
bspc config focused_border_color  "#d5d8da"
bspc config presel_feedback_color "#848484"
bspc config top_padding           0
bspc config window_gap           	10
bspc config split_ratio          	0.619
bspc config borderless_monocle   	false
bspc config gapless_monocle      	false
bspc config focus_follows_pointer true
bspc config automatic_scheme      longest_side
bspc config pointer_modifier      mod1
bspc config pointer_action1       move
bspc config pointer_action2       resize_corner
