# apps
alt + Return
	kitty

alt + v
	code

alt + BackSpace
  thunar

alt + b
	google-chrome || google-chrome-stable

alt + shift + b
	google-chrome --incognito  || google-chrome-stable --incognito

alt + m
  google-chrome --app=https://mail.google.com || google-chrome-stable --app=https://mail.google.com

alt + c
  google-chrome --app=https://calendar.google.com || google-chrome-stable --app=https://calendar.google.com

alt + d
  google-chrome --app=https://drive.google.com || google-chrome-stable --app=https://drive.google.com

alt + g
  google-chrome --app=https://github.com || google-chrome-stable --app=https://github.com

alt + s
  slack

alt + y
  google-chrome --app=https://youtube.com || google-chrome-stable --app=https://youtube.com

alt + n
  google-chrome --app=https://netflix.com || google-chrome-stable --app=https://netflix.com

alt + a
  google-chrome --app=http://go/nucleus:lac || google-chrome-stable --app=http://go/nucleus:lac

alt + p
  google-chrome --app=http://go/companion || google-chrome-stable --app=http://go/companion

alt + comma
  scrot -s

alt + period
  export BAR_WIDTH="$(($(xrandr | pcregrep -o1 'connected (\d+)x') - 20))" && bspc config top_padding 40 && polybar

alt + shift + period
  bspc config top_padding 0 && killall polybar

alt + x
  edex-ui

# close
alt + Escape
	bspc node -{c}

# toggle monocle
alt + space
	bspc desktop -l next

# quit bspwm normally
alt + shift + Escape
	bspc quit

# reload sxhkd & bspwm
alt + shift + r
	pkill -USR1 -x sxhkd && source ~/.config/bspwm/bspwmrc

# set the window state
alt + {t,shift + t,f,shift + f}
	bspc node -t {tiled,pseudo_tiled,fullscreen,floating}

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node
alt + {_,shift + }Tab
	bspc node -f {next,prev}

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
alt + ctrl + space
	bspc node -p cancel

# expand a window by moving one of its side outward
alt + super + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
alt + super + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
