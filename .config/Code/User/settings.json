{
    "cloudcode.autoDependencies": "off",
    "cloudcode.beta.enableAICompanion": true,
    "cloudcode.updateChannel": "trusted-testers",
    "cloudcode.duetAI.project": "serverless-journey",

    "editor.experimental.pasteActions.enabled": true,
    "editor.fontFamily": "'JetBrains Mono', 'Inconsolata'",
    "editor.fontLigatures": true,
    "editor.tabCompletion": "on",
    "editor.fontSize": 13.5,

    "explorer.confirmDelete": false,

    "files.autoSave": "afterDelay",

    "go.toolsManagement.autoUpdate": true,

    "ruby.format": "rubocop",
    "ruby.lint": {
        "rubocop": {
            "useBundler": true
        },
        "reek": {
            "useBundler": true
        }
    },
    "ruby.useBundler": true,
    "ruby.useLanguageServer": true,

    "window.menuBarVisibility": "toggle",

    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.startupEditor": "none",
    "[python]": {
        "editor.formatOnType": true
    },
    "cSpell.userWords": [
        "hyperparameters"
    ],
    "cloudcode.project": "butthole-of-the-internet",
    "codesnap.backgroundColor": "#4c4d4f",
    "codesnap.showWindowControls": false,
    

    ////// Presenter settings //////
    
